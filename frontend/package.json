{
  "name": "queueholeview-frontend",
  "version": "1.0.0",
  "description": "QueueHoleView Frontend - React + Vite + Electron",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "ELECTRON_DEV=true vite",
    "build": "vite build",
    "start": "electron .",
    "dist": "npx electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tree-kill": "^1.2.2",
    "vite": "^4.4.0",
    "vite-plugin-electron": "^0.15.0"
  },
  "build": {
    "appId": "com.queueholeview.app",
    "productName": "QueueHoleView",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
