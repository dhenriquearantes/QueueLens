{
  "exclude": ["jest.config.ts"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "node16",
		"lib": [
			"ES2023"
		],
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@config/*": [
				"./src/config/*"
			],
			"@core/*": [
				"./src/core/*"
			],
			"@helpers/*": [
				"./src/helpers/*"
			],
			"@infra/*": [
				"./src/infra/*"
			],
			"@modules/*": [
				"./src/modules/*"
			],
			"@shared/*": [
				"./src/shared/*"
			],
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	}
}
